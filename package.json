{
  "name": "@locadocs/monorepo",
  "version": "0.0.1",
  "private": true,
  "description": "Monorepo for locadocs",
  "author": "https://github.com/fabien-h",
  "license": "MIT",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "scripts": {
    "web": "yarn workspace @locadocs/web",
    "admin": "yarn workspace @locadocs/admin",
    "db": "yarn workspace @locadocs/local-database",
    "commit": "bash ./commit.sh",
    "pre-commit": "lint-staged",
    "format": "prettier -w .",
    "lint": "eslint .",
    "postinstall": "husky install",
    "type-check": "concurrently \"yarn shared tsc\" \"yarn web tsc\" \"yarn admin tsc\"",
    "dev": "concurrently --kill-others-on-fail \"yarn db start\"  \"yarn web dev\" \"yarn admin dev\"",
    "prepare": "husky install"
  },
  "lint-staged": {
    "packages/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ],
    "packages/**/*.{js,mjs,cjs,jsx,ts,tsx}": [
      "eslint"
    ]
  },
  "packageManager": "yarn@3.0.1",
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/preset-env": "^7.15.6",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.15.0",
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@next/bundle-analyzer": "^11.1.2",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.0",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.9.6",
    "@types/react": "^17.0.24",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "babel-jest": "^27.2.1",
    "babel-loader": "^8.2.2",
    "babel-plugin-module-resolver": "^4.1.0",
    "commitizen": "^4.2.4",
    "concurrently": "^6.2.1",
    "cz-conventional-changelog": "^3.3.0",
    "esbuild": "^0.13.2",
    "eslint": "^7.32.0",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jest": "^24.4.2",
    "eslint-plugin-jest-dom": "^3.9.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-react": "^7.26.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-standard": "^5.0.0",
    "husky": "^7.0.2",
    "jest": "^27.2.1",
    "jest-runtime": "^27.2.1",
    "lint-staged": "^11.1.2",
    "next-transpile-modules": "^8.0.0",
    "prettier": "^2.4.1",
    "react-is": "^17.0.2",
    "react-test-renderer": "^17.0.2",
    "replace-in-files": "^3.0.0",
    "sass": "^1.42.1",
    "sass-loader": "^12.1.0",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "next": "^11.1.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  }
}
